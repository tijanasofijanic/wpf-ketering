<Window x:Class="app_ketering.Koordinator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:app_ketering"
        Title="Koordinator" Height="500" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <!-- Naslov -->
        <StackPanel VerticalAlignment="Top" Margin="0 25"/>
        <StackPanel Width="59"/>
        <Button Margin="0,27,30,417" Style="{StaticResource MaterialDesignFloatingActionButton}" Background="{x:Null}"
             ToolTip="Zatvori" x:Name="btnZatvori" Click="btnZatvori_Click" RenderTransformOrigin="7.341,0.202" HorizontalAlignment="Right">
            <materialDesign:PackIcon Kind="Close" Foreground="#324969" Width="20" Height="20"/>
        </Button>
        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10" 
                                Height="100"
                                BorderThickness="2" 
                                BorderBrush="#324969"
                                Background="#a8bcd7" 
                                Foreground="#324969" 
                                FontSize="20"
                                x:Name="btnJela" 
                                Click="btnUpravljajJelima" 
                                Content="UPRAVLJANJE JELIMA" Margin="186,303,186,97"/>
        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10" 
                                Height="100"
                                BorderThickness="2" 
                                BorderBrush="#324969"
                                Background="#a8bcd7" 
                                Foreground="#324969" 
                                FontSize="20" 
                                x:Name="btnPorudzbine" 
                                Click="btnUpravljajPorudzbinama" 
                                Content="UPRAVLJANJE PORUDŽBINAMA" Margin="186,150,186,250"/>
        <TextBlock Text="KOORDINATOR KETERING SLUŽBE" Foreground="#324969" TextAlignment="Center" FontSize="30" Padding="10" FontWeight="Bold" FontFamily="Quicksand Medium" Margin="97,55,106,395"/>

    </Grid>
</Window>
