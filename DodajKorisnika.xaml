<Window x:Class="app_ketering.DodajKorisnika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Dodaj Korisnika" Height="550" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <!-- Naslov -->
        <StackPanel VerticalAlignment="Top" Margin="0,25">
            <TextBlock Text="DODAJ KORISNIKA" Foreground="#324969" TextAlignment="Center" FontSize="20" Padding="10" Width="583" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Quicksand Medium"/>
        </StackPanel>

        <!-- Forma -->
        <StackPanel Margin="100,70,100,10">
            <TextBox x:Name="txtIme" 
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi ime"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtPrezime"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi prezime"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtEmail"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi email"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtAdresa" 
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi adresu"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtGrad" 
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi grad"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtTelefon"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi telefon"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtKorisnickoIme"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi korisničko ime"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtLozinka"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi lozinku"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>
            <TextBox x:Name="txtUloga"  
                     Margin="10"
                     materialDesign:HintAssist.Hint="Unesi ulogu"
                     Foreground="#324969" Width="250" 
                     BorderBrush="#324969" 
                     CaretBrush="#324969" 
                     SelectionBrush="#324969"
                     materialDesign:TextFieldAssist.UnderlineBrush="#324969"/>

            <!-- Dugmad -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="SNIMI" Width="100" Margin="5" Click="btnSnimi_Click" Height="40" Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="10" 
                                BorderThickness="2" 
                                BorderBrush="#324969"
                                Background="#a8bcd7" 
                                Foreground="#324969" 
                                ToolTip="Insert" 
                                x:Name="btnSnimi" 
                              />
                <Button Content="OČISTI" Width="100" Margin="5" Click="btnOcisti_Click" Height="40" Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10" 
                        BorderThickness="2" 
                        BorderBrush="#324969"
                        Background="#a8bcd7" 
                        Foreground="#324969" 
                        ToolTip="Insert" 
                        x:Name="btnOcisti" />
            </StackPanel>
        </StackPanel>

        <!-- Dugme za zatvaranje -->
        <Button Style="{StaticResource MaterialDesignFloatingActionButton}" Background="{x:Null}"
                ToolTip="Zatvori" x:Name="btnZatvori" Click="btnZatvori_Click" Margin="434,10,10,484">
            <materialDesign:PackIcon Kind="Close" Foreground="#324969" Width="20" Height="20"/>
        </Button>
    </Grid>
</Window>
